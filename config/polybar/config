[module/change-audio-output]
type = custom/ipc
initial = 1
format-underline = #6cbbec
hook-0 = echo "%{A1:pactl set-card-profile 0 output\:hdmi-stereo && polybar-msg hook change-audio-output 2:}ó°‹‹%{A}" &
hook-1 = echo "%{A1:pactl set-card-profile 0 output\:analog-stereo && polybar-msg hook change-audio-output 1:}ó°½Ÿ%{A}" &

[module/vpn-status]
type = custom/script
exec = ~/.config/polybar/scripts/vpn-status.sh
interval = 5
click-left = nmcli con up Goldcar
click-right = nmcli con down Goldcar

[module/dunst]
; from https://github.com/JeanEdouardKevin/dunst-polybar
type = custom/ipc
initial = 1
format-underline = #5baadc
hook-0 = echo "%{A1:dunstctl set-paused true && polybar-msg hook dunst 2:}ïƒ³%{A}" &
hook-1 = echo "%{A1:dunstctl set-paused false && polybar-msg hook dunst 1:}ï‡¶%{A}" &
